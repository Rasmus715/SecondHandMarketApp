@model SecondHandMarketApp.ViewModels.Account.RegisterViewModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <label asp-for="Email" class="col-md-4 col-form-label text-md-right">Email</label>
                            <div class="col-md-6">
                                <input asp-for="Email" type="text" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-4 col-form-label text-md-right">Имя</label>
                            <div class="col-md-6">
                                <input asp-for="Name" type="text" class="form-control" required autofocus>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Surname" class="col-md-4 col-form-label text-md-right">Фамилия</label>
                            <div class="col-md-6">
                                <input asp-for="Surname" type="text" class="form-control" required autofocus>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-md-4 col-form-label text-md-right">Номер  телефона</label>
                            <div class="col-md-6">
                                <input asp-for="PhoneNumber" type="text" class="form-control" required autofocus>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" class="col-md-4 col-form-label text-md-right">Пароль</label>
                            <div class="col-md-6">
                                <input asp-for="Password" type="password" class="form-control" required autofocus>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-md-4 col-form-label text-md-right">Повторите пароль</label>
                            <div class="col-md-6">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required autofocus>
                                <span asp-validation-for="ConfirmPassword" class="text-danger" ></span>
                            </div>
                        </div>

                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Регистрация
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}